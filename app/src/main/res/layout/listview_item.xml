<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.root.billetesloteria.TicketFragment"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/ic_launcher"/>
    <ImageView
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/delete_ticket_btn"
        android:layout_width="30sp"
        android:layout_height="30sp" />
    <LinearLayout
        android:layout_toRightOf="@id/image_view"
        android:layout_toLeftOf="@id/delete_ticket_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:id="@+id/title"
            android:textSize="25sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/repo"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="N:"/>
            <TextView android:id="@+id/l_number"
                android:paddingLeft="10sp"
                android:paddingRight="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="10245"/>
            <TextView
                android:paddingLeft="3sp"
                android:paddingRight="3sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text=" - "/>
            <TextView android:id="@+id/l_series"
                android:paddingLeft="3sp"
                android:paddingRight="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="23sp"
                android:text="102"/>
        </LinearLayout>
        <TextView android:id="@+id/l_date"
            android:textSize="18sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="22/04/2014"/>

    </LinearLayout>

</RelativeLayout>